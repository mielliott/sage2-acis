/*
	Configuration for ACIS virtual wall at sage2.acis.ufl.edu
	See https://github.com/mielliott/sage2-acis
*/
{
	name: "ACIS",
	host: "sage2.acis.ufl.edu",
	port: 9090,
	index_port: 9292,
	background: {
		color: "#333333",
		image: {
			url: "images/background/dbgrid.png",
			style: "tile"
		},
		watermark: {
			svg: "images/EVL-LAVA.svg",
			color: "rgba(86, 117, 114, 0.9)"
		}
	},
    audio: {
                initialVolume: 8,
        },
	ui: {
		clock: 12,
		show_version: false,
		show_url: true,
                maxWindowWidth: 8192,
                maxWindowHeight: 8192,
                noDropShadow: true
	},
	voice_commands: {
		enabled: true,
		log: false
	},
	resolution: {
		width: 7680,
		height: 2160
	},
	layout: {
		rows: 1,
		columns: 2
	},
	displays: [
		{
			row: 0,
			column: 0
		},
		{
			row: 1,
			column: 0
		}
	],
	alternate_hosts: [
		"127.0.0.1",
		"localhost",
		"sage2-private.acis.ufl.edu"
	],
	remote_sites: [
	]
}
